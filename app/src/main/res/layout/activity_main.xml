<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schibsted.introducingandroid.MainActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/bt_load_picture_from_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/load_picture_from_internet" />

    <LinearLayout
        android:id="@+id/l_central"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />

        <Button
            android:id="@+id/bt_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_xlarge"
            android:padding="@dimen/gap_xlarge"
            android:text="@string/tap_me" />

        <ImageView
            android:id="@+id/iv_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/schibsted_android_training" />
    </LinearLayout>
</RelativeLayout>
